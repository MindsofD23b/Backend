{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "src/types"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "prisma.config.ts"
    ]
}